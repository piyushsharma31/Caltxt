<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <!--02112019: COMMENTED-->
<!--    android:background="@xml/background_griditem"-->
    <ImageView
        android:id="@+id/ack_name_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message_out_grey_24dp"
        android:contentDescription="@string/emptyText"
        android:visibility="gone"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/ack_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ack_name_icon"
        android:layout_toLeftOf="@+id/ack_send"
        android:layout_marginLeft="6dp"
        style="@style/TextSmall" />

    <TextView
        android:id="@+id/expire_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ack_name"
        android:layout_toLeftOf="@+id/ack_send"
        android:visibility="gone"
        style="@style/TextExtraSmall"
        android:layout_alignParentLeft="true" />

    <!-- TextView
        android:id="@+id/dummy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ack_name"
        android:layout_toRightOf="@+id/expire_time_text" />
 -->
    <!-- TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ack_name"
        android:layout_toLeftOf="@+id/ack_send"
        android:layout_toRightOf="@+id/dummy_text" />
 -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ack_send"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_send_black_24dp"
        android:contentDescription="@string/emptyText"
        android:background="@xml/button_transparent"
        android:layout_alignParentRight="true" />
</RelativeLayout>